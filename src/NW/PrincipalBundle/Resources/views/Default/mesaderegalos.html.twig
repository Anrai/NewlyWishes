{# src/NW/PrincipalBundle/Resources/Views/Default/mesaderegalos.html.twig #}

{% extends '::base.html.twig' %}

{% block body %}

    {% include ':plantillasParciales:top.html.twig' %}

	{% include 'NWPrincipalBundle:Default:carrito.html.twig' %}

        <div class="container">
            
            <h4 style="margin-top: -35px;">Mesa de Regalos de {{noviaYnovio}}</h4>

            <div class="row" style="margin-top:45px">
            {% if articulos %}
            	<div class="col-md-4">
            		<h3>Filtrar regalos</h3>
            		<br />
            		{{ form_start(formFiltrar) }}
            		{{ form_end(formFiltrar) }}
            	</div>
            	<div class="col-md-8">

            		{% for articulo in articulos %}
	            		<div class="row" style="border-top-color: rgb(214, 214, 214);border-top-width: 1px;border-top-style: solid;padding-top: 20px;">
	            			<div class="col-md-7">
	            				<h5>{{articulo.regalo}} - {{articulo.categoriaName}}</h5>
	            				<br />
	            				<p>{{articulo.descripcion}}</p>
	            				<br />
	            				<b>¿Cuántas partes deseas regalar? </b>
                                <select id="regalarPartes" name="regalarPartes">
                                    {% for i in 1..articulo.horcruxesFaltantes %}
                                        <option value="{{i}}">{{i}}</option>
                                    {% endfor %}
                                </select>
                                <span style="float:right;"><input type="button" value="Agregar" /></span>
	            			</div>
	            			<div class="col-md-5">
	            				<b>Valor</b><br />

            					${{articulo.precioTotal}}<br /><br />
            					<b>
            						{% if articulo.cantidad == 1 %}Artículo dividido en{% else %}{{articulo.cantidad}} artículos divididos en{% endif %}
            					</b><br />
            					{{articulo.horcruxes}} 
            					{% if articulo.horcruxes == 1 %}parte{% else %}partes{% endif %}
            					{% if articulo.cantidad > 1 %}c/u{% endif %}

            					<br /><br />
		            			
	            				<b>Valor por parte</b><br />
	            				${{articulo.precioTotal / articulo.horcruxes}}
	            			</div>
	            		</div>
	            	{% endfor %}
	            
            	</div>
            {% else %}
            	<h5>No se encontraron regalos.</h5>
            {% endif %}
            </div>

        </div>

{% endblock %}