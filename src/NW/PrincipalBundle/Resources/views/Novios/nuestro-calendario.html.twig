{# src/NW/PrincipalBundle/Resources/views/Novios/nuestro-calendario.html.twig #}
{% extends 'NWPrincipalBundle:Novios:administrador.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets '@fullcalendar_css' '@NWPrincipalBundle/Resources/public/css/calendario.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block partederecha %}

	<div class="rlow" style="text-align:right;">
		<h1><img Src="{{asset('img/puntov.png')}}"> Nuestro Calendario</h1>
	</div>

	<div class="row" style="font-size:17px;">
		<b>Pendientes para este día -</b><span style="color: rgb(204,0,153);"> {{ today() }} </span><br />
	</div>

	<div class="row" style="border-top-color: rgb(214, 214, 214); border-top-width: 1px; border-top-style: solid; margin-top: 25px; padding:10px;">
		
		{% for tarea in tareas %}
			<div class="row">
				<div class="col-xs-8" style="font-size:14px;">{{ tarea.compromiso }}</div>
				<div class="col-xs-4" style="font-size:14px;">{{ tarea.vencimiento }}</div>
			</div>
		{% endfor %}

	</div>

	<div class="row" style="margin-top:40px;">
		<a href="#" data-toggle="modal" data-target="#Tareas" class="modal-link">
			Ver detalle / agregar / modificar compromisos de este día
		</a>
	</div>

	<div class="row" style="margin-top:40px;">
		<div id='calendar'></div>
	</div>

{% endblock %}

{% block modales %}
	{{ parent() }}
	{% include 'NWPrincipalBundle:Novios:modalTareas.html.twig' %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
    {% javascripts '@jquery_ui_custom_js' '@fullcalendar_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% include 'NWPrincipalBundle:Novios:scriptCalendar.js.twig' %}
{% endblock %}