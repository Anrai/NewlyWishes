										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestra_informacion_bancaria.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

							<a href="{{url('nw_principal_novios_nuestras-compras')}}">
								<li>
									<div class="row">
										<div class="col-md-8">
											Nuestras Compras 
										</div>
										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestras_compras.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

