									<div class="row">
										<div class="col-md-8">
											Nuestra Boda 
										</div>
										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestra_boda.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

							<a href="{{url('nw_principal_novios_nuestro-calendario')}}">
								<li>
									<div class="row">
										<div class="col-md-8">
											Nuestro Calendario 
										</div>
										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestro_calendario.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

							<a href="{{url('nw_principal_novios_nuestro-checklist')}}">
								<li> 
									<div class="row">
										<div class="col-md-8">
											Nuestro Checklist 
										</div>
										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestro_checklist.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

							<a href="{{url('nw_principal_novios_nuestra-mesa-de-regalos')}}">
								<li>
									<div class="row">
										<div class="col-md-8">
											Nuestra Mesa de Regalos 
										</div>
										<div class="col-md-2">
											<img src="{{asset('img/novios/nuestra_mesa_de_regalos.png')}}" class="imagen_menu_novios">
										</div>
									</div>
								</li>
							</a>

							<a href="{{url('nw_principal_novios_nuestra-lista-de-invitados')}}">
