{# src/NW/PrincipalBundle/Resources/views/Proveedores/nuestra-mesa-de-regalos.html.twig #}

	{% extends 'NWPrincipalBundle:Novios:administrador.html.twig' %}

{% block partederecha %}
			<div class="container">
				<div class="row">
					<div class="col-md-5">
						
					</div>
					<div class="col-md-1 puntov">
						<img class="img-responsive" style="margin-left:40px; margin-top:4px;" src="{{asset('img/puntov.png')}}">
					</div>
					<div class="col-md-5">
						<h1>
							Nuestra Mesa de Regalos
						</h1>
					</div>
				</div>
				<div class="row" style="margin-top:15px;">
					<div class="col-md-6">
						
					</div>
					<div class="col-md-6">
						<p class="verde">
							Generar detalle en PDF ó Excel <br>¿quién nos regaló?<br><br>
						</p>
					</div>
					<div class="col-md-5">
					
					</div>
					<div class="col-xs-6">
						<p class=" verde2">
							Agrega un nuevo artículo
						</p>
					</div>
					<div class="col-xs-1">
						<!-- CHECKLIST -->
						<!-- Button trigger modal -->
						<input type="image" src="{{asset('img/novios/mas.png')}}" data-toggle="modal" data-target="#myModal" style="width:40px; height:60px; margin-top:-20px; margin-left:-30px;">
						 

						<!-- Modal -->
						<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						  <div class="modal-dialog">
						    <div class="modal-content" style="border: rgba(204,0,153,0.7) 2px solid; padding:10px;">
						      <div class="modal-header">
						      	<div class="row">
						      		<div class="col-xs-5">
							        	<h4 class="modal-title rosa" id="myModalLabel">Mi mesa de regalos<br>Nuevo artículo</h4>
						        	</div>
						        	<div class="col-xs-1">
										
						        	</div>
						        	<div class="col-xs-5">
										<img src="{{asset('img/nw.png')}}" width="100%">
						        	</div>
						        	<div class="col-xs-1">
										<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						        	</div>
						        </div>
						      </div>
						      
						      <div class="modal-body">
						      	{{ form_start(formRegalo) }}
						      	<div class="row">
						      		<div class="col-md-6">

						      			<div class="row">
						      				<div class="col-xs-12">
						      					{{ form_widget(formRegalo.regalo, { 'attr': {'class': 'input_small', 'style': '', 'placeholder': 'Nombre del artículo' } }) }}
						      					<br>
						      					{{ form_widget(formRegalo.descripcion, { 'attr': {'class': 'textarea_small', 'style': 'height:200px;', 'placeholder': 'Descripción' } }) }}
						      				</div>
						      			</div>

						      		</div>
						      		<div class="col-md-6">
						      			<div class="row">
						      				<div class="col-xs-10">
						      					{{ form_widget(formRegalo.precioTotal, { 'attr': {'class': 'input_small', 'style': '', 'placeholder': 'Valor del artículo' } }) }}
						      					<div class="col-xs-2">
						      					</div>
						      				</div>
						      			</div>

						      			<div class="row">
						      				<div class="col-xs-2">
						      					{{ form_widget(formRegalo.absorberComision) }}
						      				</div>
						      				<div class="col-xs-8">
						      					<i>¿Deseas absorber la comisión de la compra?</i>
						      				</div>
						      				<div class="col-xs-2">
						      					<img class="puntov" src="{{asset('img/puntov.png')}}" style="margin-top:7px; margin-left:-20px;">
						      				</div>
						      			</div>

						      			<div class="row" style="margin-top:20px;">
						      				<div class="col-xs-6">
						      					Número de artículos
						      				</div>
						      				<div class="col-xs-4">
						      					{{ form_widget(formRegalo.cantidad, { 'attr': {'class': 'input_registro_novios'} }) }}
						      				</div>
						      				<div class="col-xs-2">

						      				</div>											
						      			</div>


						      			<div class="row" style="margin-top:20px;">
						      				<div class="col-xs-6">
						      					¿En cuántas partes desea dividir este artículo?
						      				</div>
						      				<div class="col-xs-4">
						      					{{ form_widget(formRegalo.horcruxes, { 'attr': {'class': 'input_registro_novios'} }) }}
						      				</div>
						      				<div class="col-xs-2">
						      					<img class="puntov" src="{{asset('img/puntov.png')}}" style="margin-top:7px; margin-left:-20px;">
						      				</div>											
						      			</div>

						      			<div class="row" style="margin-top:20px;">

						      				<div class="col-xs-10">
						      					{{ form_widget(formRegalo.categoria, { 'attr': {'class': 'input_registro_novios'} }) }}
						      				</div>

						      				<div class="col-xs-2">

						      				</div>											
						      			</div>
						      		</div>

						      		<div class="row">

						      			<div class="row" style="margin-top:30px;">
						      				<div class="col-md-12">
						      					{{ form_widget(formRegalo.Agregar, { 'attr': {'class': 'botoncitoRosa', 'style': 'width:120px; float:right; margin-right:50px; margin-top:30px;' } }) }}
						      				</div>
						      			</div>

						      		</div>
								{{ form_end(formRegalo) }}
								</div>

						      </div>
						    </div>
						  </div>
						</div>
						<!-- FIN AGREGAR CHECKLIST -->
					</div>
				</div>
				<hr/>

				{% for regalo in regalos %}
				<!-- Nuevo artículo -->
				<div class="row">
					<div class="col-xs-7">
						<h1 class="art">
							{{ regalo.regalo }} – {{ regalo.categoria }}
						</h1> <br>
						<p>
							{{ regalo.descripcion }}
						</p> 
					</div>
					<div class="col-xs-3">
						<p class="columna_dos">
							Valor <br>
							<span class="art">${{ regalo.precioTotal }}</span> <br>
							{{ regalo.cantidad }} Artículo(s) dividido(s) en 
							<span class="art">{{ regalo.horcruxes }}</span> partes c/u
						</p>
					</div>
					<div class="col-xs-2 bote2">
						<a href="{{url('nw_principal_novios_regalo_delete', {'id': regalo.id})}}">
							<img class="img-responsive" src="{{asset('img/bote.png')}}">
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-3">
						<p>Artículos completados: <span class="art">{{ regalo.completados }}</span></p>	
					</div>
					<div class="col-xs-5">
						<p>Partes faltantes para completar el regalo: <span class="art">{{ regalo.horcruxesFaltantes }}</span></p>
					</div>
				</div>
				<hr />
				<!-- Fin de artículo -->
				{% endfor %}

				<br>
				<br>
				<br>
				<br>
				<br>
				<br>
			</div>
		</div>
		


				
					 

						



{% endblock %}