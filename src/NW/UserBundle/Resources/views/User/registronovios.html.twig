{# src/NW/PrincipalBundle/Resources/views/registronovios.html.twig #}
{% extends '::base.html.twig' %}

{% block body %}

{% include ':plantillasParciales:top.html.twig' %}

<div class="container">
	{{ form_start(form) }}

	<div class="row">
		<div class="col-md-10">
			<h1><img src="{{ asset('img/registro.jpg') }}" alt="Registro" width="210"></h1>
			<br />{{ form_errors(form) }}<br />
			<p>Si son una pareja que quiere simplificar la planeación de su boda, por favor regístrense.</p>
			{% for flashMessage in app.session.flashbag.get('notice') %}
				<div class="alert alert-warning">{{ flashMessage }}</div>
			{% endfor %}
		</div>
	</div>

	<div class="row" style="margin-top:20px;">
		<div class="col-md-8">
			<h3>Datos de la Novia:</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}" alt="Registro" width="210"> {{ form_widget(form.novias.nombre, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Nombre' } }) }}
			{{ form_widget(form.novias.sNombre, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Segundo Nombre' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}" alt="Registro" width="210"> {{ form_widget(form.novias.aPaterno, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Apellido Paterno' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}" alt="Registro" width="210"> {{ form_widget(form.novias.aMaterno, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Apellido Materno' } }) }}
		</div>
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.eMail, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'E-Mail' } }) }}
			<div class="col-md-3" style="padding: 0 10px 0 0;">
				<img src="{{ asset('img/punto.png') }}">
				{{ form_widget(form.novias.lada, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'LADA'} }) }}
			</div>
			<div class="col-md-9" style="padding: 0;">
				{{ form_widget(form.novias.telefono, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Teléfono de casa u oficina'} }) }}
			</div>
			<div class="col-md-12" style="padding: 0;">
				<img src="{{ asset('img/punto.png') }}">
				{{ form_widget(form.novias.celular, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Celular' } }) }}
			</div>
		</div>
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.direccion, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Dirección' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.pais, { 'attr': {'class': 'input_registro_novios'} }) }}
			<br />
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.estado, { 'attr': {'class': 'input_registro_novios'} }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.ciudad, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Ciudad' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novias.cp, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Código postal' } }) }}
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			{{ form_widget(form.mismaDireccion) }} {{ form_label(form.mismaDireccion, '¿La dirección del novio es la misma que de la novia?') }}
		</div>
	</div>

	<div class="row" style="margin-top:20px;">
		<div class="col-md-8">
			<h3>Datos del Novio:</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:15px;" width="210">{{ form_widget(form.novios.nombre, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Nombre' } }) }}
			<br/>
			{{ form_widget(form.novios.sNombre, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Segundo Nombre' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:15px;" width="210">{{ form_widget(form.novios.aPaterno, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Apellido Paterno' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:15px;" width="210">{{ form_widget(form.novios.aMaterno, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Apellido Materno' } }) }}
		</div>
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.eMail, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'E-Mail' } }) }}
			<div class="col-md-3" style="padding: 0 10px 0 0;">
				<img src="{{ asset('img/punto.png') }}">
				{{ form_widget(form.novios.lada, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'LADA'} }) }}
			</div>
			<div class="col-md-9" style="padding: 0;">
				{{ form_widget(form.novios.telefono, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Teléfono de casa u oficina'} }) }}
			</div>
			<div class="col-md-12" style="padding: 0;">
				<img src="{{ asset('img/punto.png') }}">
				{{ form_widget(form.novios.celular, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Celular' } }) }}
			</div>
		</div>
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.direccion, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Dirección' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.pais, { 'attr': {'class': 'input_registro_novios'} }) }}
			<br />
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.estado, { 'attr': {'class': 'input_registro_novios'} }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.ciudad, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Ciudad' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}">
			{{ form_widget(form.novios.cp, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Código postal' } }) }}
		</div>
	</div>

	<div class="row" style="margin-top:20px;">
		<div class="col-md-10">
			<h3>Datos de Usuario:</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:12px;" width="210">{{ form_widget(form.userName, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Usuario' } }) }}
			<br/>
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:12px;" width="210">{{ form_widget(form.userPass, { 'attr': {'class': 'input_registro_novios', 'placeholder': 'Contraseña' } }) }}
			<br />
			La contraseña debe tener mínimo 8 caracteres
		</div>
		<div class="col-md-4 puntosRosas">
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:7px;" width="210">{{ form_widget(form.terminosCondiciones) }} 
			<a href="{{asset('documents/CondicionesDeUsoGeneralYDeRegistroYAvisoDePrivacidadNewlyWishesNovios.pdf')}}">
			{{ form_label(form.terminosCondiciones, 'Acepto los términos y condiciones') }}
			</a><br />
			<img src="{{ asset('img/punto.png') }}" alt="Registro" style="margin:5; float:left; margin-top:7px;" width="210">{{ form_widget(form.terminosPrivacidad) }} {{ form_label(form.terminosPrivacidad, 'Acepto los términos de privacidad') }}<br />
		</div>
		<div class="col-md-4">
			{{ form_widget(form.aceptar, { 'attr': {'class': 'botoncitoRosa', 'style': 'width:100px; margin-top:2px; bottom:0px;' } }) }}
		</div>
	</div>

	{{ form_end(form) }}
</div>

{% endblock %}