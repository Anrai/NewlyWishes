        {% include ':plantillasParciales:top.html.twig' %}

            <div class="container">

                <div class="row" style="margin-top:20px;">
                    <div class="col-xs-12 text-center">
                        <h3>Hola {{ userInformation.getRealname }}, por favor verifica tus datos:</h3>
                    </div>
                </div>

                {#
                <div class="row">
                    Username: {{ userInformation.getUsername }}<br />
